<h1>New game</h1>
<% 10.times.map do %>
<div class='container'>
  <%= @letters.sample %>
</div>
<% end %>
<p>What's the longest word you can find?</p>
<div id='form'>
  <form action="/score" method="post">
    <input type="text" name="answer">
    <input type="submit" value="Play" class='button'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>